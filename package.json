{
  "name": "@ignatisd/cbrm-mongoose",
  "version": "1.0.0",
  "description": "A CBRM connector package for mongoose",
  "files": [
    "lib/**/*"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc -b tsconfig.json",
    "eslint": "eslint -c .eslintrc.js --ext .ts src",
    "test": "npm run eslint",
    "prepare": "npm run build",
    "prepublishOnly": "npm run eslint",
    "preversion": "npm run eslint",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "sr": "npx semantic-release --dry-run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ignatisD/cbrm-mongoose.git"
  },
  "keywords": [],
  "author": "Ignatios Drakoulas",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ignatisD/cbrm-mongoose/issues"
  },
  "homepage": "https://github.com/ignatisD/cbrm-mongoose#readme",
  "dependencies": {
    "@ignatisd/cbrm": "^0.1.0",
    "express": "^4.17.1",
    "lodash": "^4.17.21",
    "mongoose": "6.0.7",
    "mongoose-aggregate-paginate-v2": "^1.0.5",
    "mongoose-paginate-v2": "^1.4.2",
    "mongoose-slug-updater": "^3.3.0"
  },
  "devDependencies": {
    "@semantic-release/github": "^8.0.2",
    "@types/express": "^4.17.13",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsdoc": "^37.0.3",
    "eslint-plugin-no-null": "^1.0.2",
    "semantic-release": "^18.0.0",
    "typescript": "^4.4"
  },
  "publishConfig": {
    "access": "public",
    "branches": [
      "master"
    ]
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "assets": ["lib/**"]
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": ["lib/**"]
        }
      ]
    ]
  }
}
